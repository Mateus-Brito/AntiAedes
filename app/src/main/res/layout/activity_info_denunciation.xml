<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkCyan"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:gravity="center"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.antiaedes.DenunciationActivity">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignBounds"
        android:background="@drawable/shape_button_default"
        android:padding="10dp"
        android:columnCount="2" >


        <ImageView
            android:id="@+id/denImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"/>
        <!-- Tipo da Denuncia -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="CEP: " />

        <EditText
            android:id="@+id/denCep"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/grey"
            android:inputType="none">
        </EditText>

        <!-- Data da Denuncia-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Bairro: " />

        <EditText
            android:id="@+id/denBairro"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:inputType="none">
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Rua: " />

        <EditText
            android:id="@+id/denRua"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:inputType="none">
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Cidade: " />

        <EditText
            android:id="@+id/denCidade"
            android:layout_width="fill_parent"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:editable="false"
            android:inputType="none"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Referencias: " />

        <EditText
            android:id="@+id/denReferencia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:editable="false"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:inputType="none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Detalhes: " />

        <EditText
            android:id="@+id/denDetalhes"
            android:layout_width="fill_parent"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:editable="false"
            android:inputType="none"/>

        <Button
            android:id="@+id/btDen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="solucionar"
            android:layout_columnSpan="2"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_button_start"
            android:text="Solucionar"/>
    </GridLayout>


</LinearLayout>